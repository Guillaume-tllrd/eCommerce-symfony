{% extends "base.html.twig" %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% include "_partials/_adminnav.html.twig" %}
			<main class="col-9 boder border-light bg-withe p-2">
				<h1>Liste des catégories</h1>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Parent</th>
							<th>Slug</th>
							<th>Ordre</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<td>{{categorie.id}}</td>
								<td>{{categorie.name}}</td>
								<td>
									{# obligé de faire une condition pour prane tcar sinon on a une erreur, bien faire afficher le nom #}
									{# arreté à 23:22 #}
										{% if categorie.parent is not null %}
									{{categorie.parent.name}}
								{% endif %}
								</td><td>{{categorie.slug}}
								</td><td>{{categorie.categoryOrder}}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</main>
	</div>
</div>{% endblock %}
