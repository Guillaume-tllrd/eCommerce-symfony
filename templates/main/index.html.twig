{% extends 'base.html.twig' %}
{# eténd le fichier base #}
{% block title %}Titre
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Site e-commerce<h1/>
					<p>Bienvenue dans notre boutique</p>
				</div>
				{# étant donné que je fais un findBy et que je veux tout afficher je dois faire boucler#}
				{% for category in categories %}
					{% if category.parent == null %}
						<div class="col-12">
							<h2>{{category.name}}</h2>
						</div>
					{% else %}
						<div class="col-4">
							<div class="card h-100 mx-auto">
								<div class="card-body d-flex flex-column justify-content-center align-items-center">
									<h3 class="card-title text-center">{{category.name}}</h3>
									<a href="{{path("categories_list", {id:category.id})}}" class="btn btn-primary mt-3">Voir les produits</a>
								</div>
							</div>
						</div>

					{% endif %}


				{% endfor %}
			</section>
		</main>

	{% endblock %}
