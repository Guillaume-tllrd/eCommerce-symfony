{% if pages > 1 %}
	<nav>
		<ul class="pagination justify-content-center">
			{% if currentPage > 1 %}
				{# si ma page est plus grande que 1 sinon elle est disabled #}
				<li class="page-item">
					<a href="{{path(path,{id:id, page: currentPage - 1})}}" class="page-link">&lt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&lt;</a>
				</li>
			{% endif %}
			{# numéro de page, on doit boucler: on appelle page, on commence à 1 jusqu'au max: #}
			{% for page in 1..pages %}
				<li class="page-item {{(page == currentPage) ? 'active' : " "}}">
					<a href="{{path(path,{id:id, page:page})}}" class="page-link">{{page}}</a>
				</li>
			{% endfor %}
			{% if currentPage < pages %}
				{# si notre page est inférieur au nombre de pages alors j'affiche le lien sinon disabled#}
				<li class="page-item">
					<a href="{{path(path,{id:id, page:currentPage + 1})}}" class="page-link">&gt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&gt;</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
